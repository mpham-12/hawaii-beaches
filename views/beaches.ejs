<% layout('/layouts/boilerplate') %>

  <div id="map" style="width: 100%; height: 500px">


  </div>

  <h1>BEACHES PAGE</h1>


  <% for (let beach of beaches){ %>
    <div class="card mb-3" style="max-width: 80%;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src=<%=beach.image.url%> class="img-fluid rounded-start" alt="">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <a href="/beaches/<%=beach._id%>">
              <h5 class="card-title">
                <%= beach.title %>
            </a>
            <p class="card-text">
              <%= beach.description %>
            </p>
            <p class="card-text"><small class="text-muted">
                <%= beach.location %>
              </small></p>
          </div>
        </div>
      </div>
    </div>

    <% } %>
      <a href="/beaches/new">Create</a>

      <script>
        const mapboxToken = '<%-process.env.MAPBOX_TOKEN%>';
        const beaches = {features: <%- JSON.stringify(beaches)%>}
      </script>

      <script src="/js/clusterMap.js"></script>